{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "sourceMap": false,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "removeComments": true,
    "allowJs": true
  },
  "include": ["./**/*.ts"]
}
